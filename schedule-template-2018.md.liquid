{%- assign debug = false %}
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <link rel="stylesheet" type="text/css" href="http://foolscap.org/assets/css/font-awesome.css?v=4ebb9b5d70" />
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic|Open+Sans:700,400" />


        <style>
         .schedule-grid {

         }
         .hourly {
             display: grid;
             justify-content: center;
             grid-gap: 2px;
             align-content: center;
             align-items: stretch;
             grid-template-columns: [ {{schedule.columns[0]}} ] 1fr [ {{schedule.columns[1]}} ] 10fr [ {{schedule.columns[2]}} ] 10fr [ {{schedule.columns[3]}} ] 10fr;

         }
         .hourly > * {
             display: flex;
             align-items: center;
             justify-content: center;
             margin: 0;
             border: 1px solid black;
             padding: 2px;
             text-align: center;
             vertical-align: middle;
         }

         .schedule .time {
             font-size: 75%;
             grid-column: c_time;
             border: none;
         }

         .schedule .planned {
         }

         .schedule .break {

             background-color: #999;
         }

         .schedule .openspace {
             text-align: center;
             border: 1px dashed black;
         }

         .schedule .byom {
             border-bottom: none;
         }

         .schedule .openspace .closed {
             text-align: center;
         }

         span.line {
             display: inline-block;
         }
         @media all {
             .page-break { display: none; }
             .schedule-print-grind { display: none; }
             .hide-on-normal { display: none; }
             p     .hide-on-print { display: block; }

         }
         @media print {
             .hide-on-print { display: none; }
             .hide-on-normal { display: block; }
             .page-break { display: block; page-break-before: always; }
             .schedule-print-grind { display: block; }
             .site-head { display: none; }
             .topnav_anchor { display: none; }
             .topnav { display: none; }
             .site-footer { display: none; }
             .post-title { display: none; }
             .schedule-grid { display: none; }
             img { display: none; }

             h3 { font-size: 400%; }
             h4 { font-size: 200%; }
             .grid-label { font-size: 700%; }
             .panel-detail { font-size: 225%; line-height: 1.1 }
             .time { height: 3.5in; margin: 0; padding: 0; }
             //  .time:nth-of-type(odd) { page-break-before: always; }
             .time { page-break-before: always; }
             .panel-page { page-break-before: always; }
             .room { page-break-before: always; }

             @page {size: landscape; }
         }
        </style>
    </head>
    <body>
        <!-- header class="site-head">
             <div class="vertical">
             <div class="site-head-content inner">
             <a class="blog-logo" href="http://www.foolscap.org"><img src="http://foolscap.org/content/images/2014/Apr/logo-full-3col-0300x0100.png" alt="Foolscap" /></a>
             <div class="head-info">Feb. 2&dash;4, 2018<br>
             Hilton Seattle Airport<br>
             Seattle, WA 98188
             </div>
             </div>
             </div>
             </header>-->
        <div class="schedule-grid">
            {%- for day-hash in schedule.day-time-ranges %}
                {%- assign day = day-hash[0] %}
                {%- assign start-time = day-hash[1].start-time %}
                {%- assign stop-time = day-hash[1].stop-time %}
                {%- assign row-count = stop-time | minus: start-time | times: 2 %}

                <h2 class="hide-on-print"> {{ day.label }} </h2>

                <!-- hourly -->
                {%- assign row_num = 1 %}
                {%- assign col_num = 1 %}
                <br>
                <div class="{{ schedule.class-type }} hourly {{ day.label }}" >
                    {%- for grid_column in schedule.columns %}
                        {%- assign room = grid_column | column_to_room %}
                        {%- assign name = room.name %}
                        <h3  style="grid-column: {{grid_column}}; grid-row: {{row_num}};">{{name}}</h3>
                        {%- assign col_num = col_num | plus: 1 %}
                    {%- endfor %}

                    {%- assign row_num = row_num | plus: 1 %}

                    <!-- time for {{day.label}} -->
                    {%- for half-hour in (0..row-count) %}
                        {%- assign hour = half-hour | divided_by: 2 | plus: start-time %}
                        {%- capture hour-minutes %}{%- cycle day.label: '00', '30' %}{%- endcapture %}

                        {%- capture ampm %}{%- if hour >= 12 %}PM{%- else %}AM{%- endif %}{%- endcapture %}
                        {%- capture time %}{%- if hour > 12 %}{{ hour | minus: 12 }}{%- else %}{{hour}}{%- endif %}:{{ hour-minutes }} {{ampm}}{%- endcapture %}


                        {%- assign col_num = 1 %}
                        <h4 class="time" style="grid-column: c_time; grid-row: {{row_num}};">{{time}}</h4>
                        {%- assign row_num = row_num | plus: 1 %}

                    {%- endfor %}
                    {%- for day-hash in schedule.day-events  %}
                        {%- assign day-name = day-hash[0] %}
                        <!-- events for {{day-name}} -->
                        {%- for event in day-hash[1] %}
                            {%- assign col = event.room | room_to_column  %}
                            {%- assign row = event.hour | time_to_row: day-name, event.hour-end  %}
                            {%- assign class = event.class | default: "planned" %}
                            <h4 class="{{event.class}}" style="grid-column: {{ col }}; grid-row: {{ row }};"> <a id="slot_{{cap_id}}" href="#slot_detail_{{cap_id}}">{{ event.name | default_name: event.hour, "in", event.room }}</a> </h4>
                        {%- endfor %}
                    {%- endfor %}
                </div>
            {%- endfor %}

            <h2 class="hide-on-print"> Map </h2>

            <img src="http://foolscap.org/content/images/2017/02/foolscap-map.png" alt="Hotel Map" class="hide-on-print">

                <h2 class="hide-on-print"> Panel Details </h2>

                {%- for day in schedule.calendar %}
                    {%- for time-slot in day.hourly.time-slots %}
                        {%- for panel in time-slot %}
                            {%- capture cap_id %}{% increment slot_detail_id %}{% endcapture %}
                            {%- if panel.class == "openspace" or panel.class == "planned" %}
                                <div class="panel-page">
                                    {% capture time %}{% save cap_id %}{% endcapture %}
                                    <h3> <a id="slot_detail_{{cap_id}}" href="#slot_{{cap_id}}">{{panel.label}} </a> </h3>
                                    <h4 class="hide-on-print">{{time}}</h4>
                                    <div class="panel-detail">
                                        {%- if panel.details != empty %}
                                            <p>
                                                {{panel.details}}
                                            </p>
                                        {%- endif %}
                                        {%- if panel.notes != empty %}
                                            <p class="hide-on-print">
                                                <h5>Panels Notes</h5>
                                                {{panel.notes}}
                                            </p>
                                        {%- endif %}
                                    </div>
                                </div>

                                <!-- panel print with time for room -->
                                <div class="panel-page hide-on-normal">
                                    <h3>{{panel.label}}</h3>
                                    <h4 class="">  {{time}} </h4>
                                    <div class="panel-detail">
                                        {%- if panel.details != empty %}
                                            {{panel.details}}
                                        {%- endif %}
                                    </div>
                                </div>
                            {%- endif %}
                        {%- endfor %}
                    {%- endfor %}
                {%- endfor %}


                {%- for column in day.columns %}
                    <th >{{column.label}}</th>
                {%- endfor %}


                <!-- wall schedule grid labels for print -->
                <div class="hide-on-normal">
                    {%- for day in schedule.calendar %}
                        <!-- {{day.label}} -->
                        {%- for column in day.columns %}
                            <h1 class="grid-label room">{{column.label}}</h1>
                        {%- endfor %}

                        {%- for hour in (day.hourly.start-time..24) %}
                            {%- assign hour-minutes = day.hourly.time-minutes-offset %}
                            {%- capture ampm %}{%- if hour >= 12 %}PM{%- else %}AM{%- endif %}{%- endcapture %}
                            {%- capture time %}{%- if hour > 12 %}{{ hour | minus: 12 }}{%- else %}{{hour}}{%- endif %}:{{ hour-minutes }} {{ampm}}{%- endcapture %}
                            <h1 class="grid-label time">{{time}}
                        {%- endfor %}
                    {%- endfor %}
                </div>
        </div>
        <div class="page-break"></div>
    </body>
</html>
